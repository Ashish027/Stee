<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="4dp"
    android:background="@drawable/back_1"
    android:elevation="90dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#9BADDA"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Name :"
                        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Email :"
                        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Occupation :"
                        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Donations :-"
                        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_MoneyHint"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Money :"
                        android:textColorHint="@android:color/background_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_FoodHint"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Food :"
                        android:textColorHint="@android:color/background_dark"
                        android:textStyle="bold"  />

                    <TextView
                        android:id="@+id/tv_StationaryHint"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Stationary :"
                        android:textColorHint="@android:color/background_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ClothHint"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="Cloth :"
                        android:textColorHint="@android:color/background_dark"
                        android:textStyle="bold"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/don_name"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/don_Email"
                        android:layout_width="match_parent"
                        android:layout_height="25dp" />

                    <TextView
                        android:id="@+id/don_Occupation"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/don_type"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/don_Money"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/don_Food"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="" />


                    <TextView
                        android:id="@+id/don_Stationary"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="" />

                    <TextView
                        android:id="@+id/don_Cloth"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:hint="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>